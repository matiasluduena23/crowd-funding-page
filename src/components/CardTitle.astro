---
import { Image } from 'astro:assets';
import cardLogo from '../assets/logo-mastercraft.svg';
import iconBookmark from '../assets/icon-bookmark.svg';
import Button from './Button.astro';
---

<main class="container">
    <div class="icon">
        <Image src={cardLogo} alt="logo icon" />
    </div>
    <h1>Mastercraft Bamboo Monitor Riser</h1>
    <p>
        A beautiful & handcrafted monitor stand to reduce neck and eye strain.
    </p>
    <div class="wrap-button flex">
        <Button text="Back this project" width="70%" active={true}  id="back-project"/>
        <button class="bookmark">
            <svg width="56" height="56" xmlns="http://www.w3.org/2000/svg"
                ><g fill="none" fill-rule="evenodd"
                    ><circle fill="#2F2F2F" cx="28" cy="28" r="28"
                    ></circle><path
                        fill="#B1B1B1"
                        d="M23 19v18l5-5.058L33 37V19z"></path></g
                ></svg
            >
            <span>Bookmark</span>
        </button>
    </div>
</main>

<style>
    main {
        background-color: white;
        text-align: center;
        padding: 2rem 1rem;
        border-radius: 10px;
        margin-top: -5rem;
        position: relative;
        max-width: 680px;
    }

    .icon {
        position: absolute;
        top: -25px;
        left: 0;
        right: 0;
        margin-inline: auto;
    }

    h1 {
        font-size: 1.8rem;
        line-height: 1.3;
        margin-top: 1.5rem;
    }

    p {
        color: var(--dark-gray);
        margin: 1rem 0 2.3rem;
    }

    span {
        display: none;
        font-weight: 600;
    }

    .active svg circle {
        fill: var(--cyan-dark-clr);
    }

    .active svg path {
        fill: white;
    }

    button:last-child {
        border: none;
        background-color: transparent;
        border-radius: 50%;
        height: 55px;
    }

    button:last-child:hover svg circle {
        fill: rgba(47, 47, 47, 0.8);
    }

    button:last-child:hover span {
        color: rgba(47, 47, 47, 0.8);
    }

    @media (min-width: 768px) {
        main {
            padding-inline: 3rem;
        }
        span {
            display: inline-block;
            color: var(--dark-gray);
        }

        .active span {
            color: var(--cyan-dark-clr);
        }

        button:last-child {
            border: none;
            background-color: #f5f5f5;
            border-radius: 20px;
            height: 52px;
            padding-right: 1.5rem;
            display: flex;
            align-items: center;
            gap: 1rem;
        }

        svg {
            transform: translateX(-5px);
        }
    }
</style>
