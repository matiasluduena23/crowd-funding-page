---
import Button from '../Button.astro';

const { active } = Astro.props;
---

<form>
    <h3>Enter your pledge</h3>
    <div class="flex">
        <span>$</span>
        <input type="number" name="" id="" />
        <Button text="Continue" width="110px" active={active} />
    </div>
</form>

<style>
    form {
        text-align: center;
        padding: 1rem;
        border-top: 2px solid #e4e4e4;
    }

    h3 {
        color: var(--dark-gray);
        font-size: 1rem;
        font-weight: 400;
        margin-bottom: 1rem;
    }

    form div {
        position: relative;
    }

    form span {
        position: absolute;
        left: 20px;
        top: 12px;
        color: var(--dark-gray);
    }

    input[type='number'] {
        border: 1px solid var(--dark-gray);
        color: black;
        font-weight: 600;
        padding: 1rem;
        padding-left: 2rem;
        width: 110px;
        border-radius: 25px;
        font-family: var(--ff);
    }

    input[type='number']:focus {
        outline: none !important;
        border: 1px solid var(--cyan-clr);
    }

    /* Chrome, Safari, Edge, Opera */
    input::-webkit-outer-spin-button,
    input::-webkit-inner-spin-button {
        -webkit-appearance: none;
        margin: 0;
    }

    /* Firefox */
    input[type='number'] {
        -moz-appearance: textfield;
    }

    @media (min-width: 768px) {
        form {
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        .flex {
            gap: 1rem;
        }

        h3 {
            margin-bottom: 0;
        }
    }
</style>
