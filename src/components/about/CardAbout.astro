---
import Button from '../Button.astro';
const { title, pledge, text, left, active } = Astro.props;
---

<article class={active ? 'active' : 'desactive'}>
    <div class="flex">
        <h3>{title}</h3>
        <p class="pledge">{pledge}</p>
    </div>
    <p class="text">
        {text}
    </p>
    <div class="flex">
        <div class="align">
            <p class="left">{left}</p>
            <span>left</span>
        </div>

        <Button
            text={active ? 'Select Reward' : 'Out of Stock'}
            width="160px"
            active={active}
        />
    </div>
</article>

<style>
    .desactive {
        filter: opacity(0.3);
    }

    article {
        border: 2px solid #e4e4e4;
        border-radius: 5px;
        padding: 1rem;
        margin-bottom: 1.5rem;
    }

    .flex {
        flex-direction: column;
        align-items: start;
    }

    h3 {
        font-size: 1rem;
    }

    .pledge {
        color: var(--cyan-clr);
        font-weight: 500;
    }

    .text {
        margin-block: 2rem;
        color: var(--dark-gray);
    }

    .align {
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 0.5rem;
        margin-bottom: 1rem;
    }

    .left {
        font-size: 2rem;
        font-weight: 600;
    }

    span {
        font-size: 16px;
        font-weight: 500;
        color: var(--dark-gray);
    }

    @media (min-width: 768px) {
        article {
            padding: 2rem;
        }
        .flex {
            flex-direction: row;
            align-items: center;
        }

        .align {
            margin-bottom: 0;
        }

        .text {
            margin-block: 1.5rem;
        }
    }
</style>
